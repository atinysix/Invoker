<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_test_SourceCaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SourceCaller" />

    <Button
        android:id="@+id/btn_test_DataCaller_TestInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataCaller-TestInfo" />

    <Button
        android:id="@+id/btn_test_DataCaller_List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataCaller-List" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#008800" />

</LinearLayout>